{
  "name": "ng-image-preload",
  "version": "0.1.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production ng-image-preload",
    "build:gh-pages": "ng build --configuration production --project=ng-image-preload-example",
    "postbuild": "cp ./README.md ./dist/@jaspero/ng-image-preload && cp LICENSE ./dist/@jaspero/ng-image-preload",
    "test": "ls",
    "test:app": "ls",
    "lint": "ng lint ng-image-preload",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{ts,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "~12.2.16",
    "@angular/common": "~12.2.16",
    "@angular/compiler": "~12.2.16",
    "@angular/core": "~12.2.16",
    "@angular/forms": "~12.2.16",
    "@angular/platform-browser": "~12.2.16",
    "@angular/platform-browser-dynamic": "~12.2.16",
    "@angular/router": "~12.2.16",
    "@jaspero/ng-image-preload": "1.0.2",
    "core-js": "^2.5.4",
    "rxjs": "~6.6.7",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular/cli": "~12.2.16",
    "@angular/compiler-cli": "~12.2.16",
    "@angular/language-service": "~12.2.16",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.7",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "husky": "1.3.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^7.0.1",
    "prettier": "^1.15.3",
    "protractor": "~7.0.0",
    "semantic-release": "^15.12.5",
    "ts-node": "~7.0.0",
    "tslib": "^1.9.0",
    "tslint": "~6.1.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jaspero/ng-image-preload.git"
  },
  "release": {
    "pkgRoot": "dist/@jaspero/ng-image-preload",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
